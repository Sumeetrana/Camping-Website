<%- include('partials/header') %>

<div></div>

<div style="margin-top: 80px;">
    <div class="container">
        <div class="card mb-3" style="width: 100%;">
            <img class="card-img-top img-responsive" src="<%= camp.imageUrl %>" alt="Card image cap">
            <div class="card-body">
                <h3 class="card-title text-center" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;"><%= camp.name %>-<%= camp.state %></h3>
            </div>
            
                <!-- <button  class="btn btn-info ml-auto" style="width: 20%;margin: 10px;">Add to cart</button> -->
            
        </div>
        
        <hr>

        <p class="lead""><%= camp.description %></p>
        <hr>
        <div class="section">
            <h2>Comments</h2>
            <form action="/camps/<%= camp._id %>" method="post">
                <input type="text" name="comment" placeholder="Write a comment.." class="form-control" style="width: 80%; display: inline;">
                <button class="btn btn-info" style="margin-left: 40px; margin-bottom: 10px">Add Comment</button>
            </form>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    

                    <% camp.comments.forEach((comment) => { %>
                        <h5 style="display: inline;"><strong>User</strong></h5>
                        <span style="margin-left: 80%;font-size: 1rem;">10 days ago</span>
                        <div style="font-size: 1.3rem;"><%= comment.text %></div>
                        <hr>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

