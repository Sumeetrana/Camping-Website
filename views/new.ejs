<%- include('partials/header2') %>
<div style="padding: 10px;margin-top: 5rem">
<div class="container">
    <h1 style="text-align: center;font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; ">Create a new campground</h1>
    <hr>
    <form action="/camps" method="POST" style="width: 30%;margin: 0 auto;">
        <div class="form-group">
            <label for="exampleInputEmail1">Camp Name</label>
            <input type="text" name="name" class="form-control" placeholder="Enter Name" maxlength="18" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Image Url</label>
            <input type="text" name="image" class="form-control" placeholder="Image url" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">State Name</label>
            <input type="text" name="state" class="form-control" placeholder="Enter State Name" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Description</label>
            <textarea type="text" name="description" class="form-control" placeholder="Enter description" id="exampleInputPassword1" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/camps" class="btn btn-secondary">Go back</a>
    </form>
</div>
</div>
<%- include('partials/footer') %>